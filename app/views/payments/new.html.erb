<body id="body-blue">

  <div class="form-container">

    <div class="container-title">
      <h2 class="text-center"><%= @current_user.first_name.capitalize %>, you are alsmost there</h2>
      <p class="text-center">Ready to proceed with payment?</p>
    </div>

    <div class="form-itself pt-2">
      <%= form_tag order_payments_path(@order) do %>
        <article>
          <label class="amount">
            <span>Total price: <%= humanized_money_with_symbol(@order.amount) %>,00</span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="My Product"
          data-email="<%= current_user.email %>"
          data-description="Frame"
          data-amount="<%= @order.amount_cents %>"
          data-currency="<%= @order.amount.currency %>"></script>
      <% end %>
    </div>

  </div>

</body>
