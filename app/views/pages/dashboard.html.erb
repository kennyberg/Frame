          <tr class="bg-white" id="order-row">
              <td><%=order.id%></td>
              <td><%= order.created_at.strftime("%b %d, %Y") %></td>
              <td class="text-right"> <%= @products.length %> </td>
              <td class="text-right">‚Ç¨ <%= order.amount_cents / 100 %></td>
              <td class="text-right"><%= link_to 'üîé', order_path(order.id) %></td>
          </tr>
        </tbody>
<% end %>
      </table>
    </div>
  </div>
</div>
<!-- BELOW, END OF THE ORDER SECTION -->


